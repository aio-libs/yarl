[html]
show_contexts = true
skip_covered = false

[paths]
_site-packages-to-src-mapping =
  .
  */lib/pypy*/site-packages
  */lib/python*/site-packages
  *\Lib\site-packages

[report]
fail_under = 98.95
skip_covered = true
skip_empty = true
show_missing = true
exclude_also =
  ^\s*@pytest\.mark\.xfail
  if TYPE_CHECKING
  assert False
  : \.\.\.(\s*#.*)?$
  ^ +\.\.\.$
omit =
  benchmark.py
  url_benchmark.py
  tests/*_benchmarks.py

[run]
branch = true
# Cython.Coverage plugin is not supported on sysmon core which is default on
# Python 3.14+ so always use ctrace core
core = ctrace
cover_pylib = false
# https://coverage.rtfd.io/en/latest/contexts.html#dynamic-contexts
# dynamic_context = test_function  # conflicts with `pytest-cov` if set here
parallel = true
plugins =
  covdefaults
  Cython.Coverage
relative_files = true
source =
  .
source_pkgs =
  yarl